@model IEnumerable<Prueba2.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Eventos</h2>

<p>
    @Html.ActionLink("Crear evento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre evento
        </th>
        <th>
           Dirección
        </th>
        <th>
           Fecha
        </th>
        <th>
          Hora
        </th>
        <th>
            Nombre cliente
        </th>
        <th>
            Nombre empleado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.nombre)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.id_evento }, new { @class = "btn btn-info glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ", "Details", new { id = item.id_evento }, new { @class = "btn btn-success glyphicon glyphicon-info-sign" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.id_evento }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })

           


        </td>
    </tr>
}

</table>
